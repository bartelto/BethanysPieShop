@model  Pie

<div class="col-sm-4 col-lg-4 col-md-4 mb-4">
    <div class="card">
        <img src="@Model.ImageThumbnailUrl" class="card-img-top" alt="" />
        <div class="card-body">
            <h4 class="float-right">@Model.Price.ToString("c")</h4>
            <h4>
                <a asp-controller="pie" asp-action="Details" asp-route-id="@Model.PieId">@Model.Name</a>
            </h4>
            <p class="card-text">@Model.ShortDescription</p>
        </div>
    </div>
</div>