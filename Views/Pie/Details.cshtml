@model Pie

<h2>@Model.Name</h2>

<div class="card">
    <img alt="@Model.Name" src="@Model.ImageUrl" class="card-img-top" />
    <div class="card-body">
        <h3 class="float-right">@Model.Price</h3>
        <h3>
            <a href="#">@Model.Name</a>
        </h3>
        <h4>@Model.ShortDescription</h4>
        <p class="card-text">@Model.LongDescription</p>
    </div>
</div>